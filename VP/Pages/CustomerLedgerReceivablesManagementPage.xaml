<Page x:Class="Project.Pages.CustomerLedgerReceivablesManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Customer Ledger &amp; Receivables Management" 
      Background="{StaticResource BackgroundColor}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Page Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="Manage customers" 
                         FontSize="32" 
                         FontWeight="Bold"
                         Foreground="{StaticResource TextPrimaryColor}"
                         Margin="0,0,0,8"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
                <TextBlock Text="Add, update, and manage customer information, contact details, and account status"
                         FontSize="16"
                         Foreground="{StaticResource TextSecondaryColor}"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
            </StackPanel>
            
            <!-- Customer Information Form -->
            <Border Grid.Row="1" 
                  Style="{StaticResource CardStyle}"
                  Margin="0,0,0,24">
                <StackPanel Margin="24">
                    <TextBlock Text="Customer Information" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Name -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Name" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtName" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- CNIC/NTN -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="CNIC/NTN" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtCNICNTN" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- Contact -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,16,0,0">
                            <TextBlock Text="Contact" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtContact" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- Type (Buyer/Seller/Agent) -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,16,0,0">
                            <TextBlock Text="Type" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbType" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"/>
                        </StackPanel>
                        
                        <!-- Address -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,16,0,0">
                            <TextBlock Text="Address" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtAddress" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="60"
                                   TextWrapping="Wrap"
                                   AcceptsReturn="True"
                                   VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                        
                        <!-- Status -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,16,0,0">
                            <TextBlock Text="Status" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbStatus" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"/>
                        </StackPanel>
                        
                        <!-- Buttons -->
                        <StackPanel Grid.Row="3" 
                                  Grid.Column="2" 
                                  Orientation="Horizontal"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
                                  Margin="0,16,0,0">
                            <Button Content="Save" 
                                  Style="{StaticResource PrimaryButtonStyle}"
                                  Width="100"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnSave_Click"/>
                            <Button Content="Clear" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="100"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnClear_Click"/>
                            <Button Content="Delete" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="100"
                                  Height="40"
                                  Click="BtnDelete_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Search & Filter Section -->
            <Border Grid.Row="2" 
                  Style="{StaticResource CardStyle}"
                  Margin="0,0,0,24">
                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Search" 
                                 FontSize="14" 
                                 FontWeight="Medium"
                                 Foreground="{StaticResource TextPrimaryColor}"
                                 Margin="0,0,0,8"
                                 TextOptions.TextFormattingMode="Display"
                                 TextOptions.TextRenderingMode="ClearType"/>
                        <TextBox x:Name="txtSearch" 
                               Style="{StaticResource ModernTextBoxStyle}"
                               Height="40"
                               TextChanged="TxtSearch_TextChanged"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Filter by Type" 
                                 FontSize="14" 
                                 FontWeight="Medium"
                                 Foreground="{StaticResource TextPrimaryColor}"
                                 Margin="0,0,0,8"
                                 TextOptions.TextFormattingMode="Display"
                                 TextOptions.TextRenderingMode="ClearType"/>
                        <ComboBox x:Name="cmbFilterType" 
                                Style="{StaticResource ModernComboBoxStyle}"
                                Height="40"
                                Width="150"
                                SelectionChanged="CmbFilterType_SelectionChanged">
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Filter by Status" 
                                 FontSize="14" 
                                 FontWeight="Medium"
                                 Foreground="{StaticResource TextPrimaryColor}"
                                 Margin="0,0,0,8"
                                 TextOptions.TextFormattingMode="Display"
                                 TextOptions.TextRenderingMode="ClearType"/>
                        <ComboBox x:Name="cmbFilterStatus" 
                                Style="{StaticResource ModernComboBoxStyle}"
                                Height="40"
                                Width="150"
                                SelectionChanged="CmbFilterStatus_SelectionChanged">
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="6" 
                              VerticalAlignment="Bottom"
                              Margin="0,24,0,0">
                        <Button Content="Export PDF" 
                              Style="{StaticResource SecondaryButtonStyle}"
                              Width="120"
                              Height="40"
                              Margin="0,0,0,12"
                              Click="BtnExportPDF_Click"/>
                        <Button Content="Export Excel" 
                              Style="{StaticResource SecondaryButtonStyle}"
                              Width="120"
                              Height="40"
                              Click="BtnExportExcel_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Customer List -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                <StackPanel Margin="24">
                    <TextBlock Text="Customer List" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <DataGrid x:Name="dgCustomers" 
                            Style="{StaticResource ModernDataGridStyle}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            SelectionMode="Single"
                            SelectionChanged="DgCustomers_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="CNIC/NTN" Binding="{Binding CNICNTN}" Width="150"/>
                            <DataGridTextColumn Header="Contact" Binding="{Binding Contact}" Width="150"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>

