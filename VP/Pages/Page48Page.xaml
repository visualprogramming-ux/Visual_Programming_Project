<Page x:Class="Project.Pages.Page48Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Installments &amp; Payment Plans" 
      Background="{StaticResource BackgroundColor}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Page Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="Installments &amp; Payment Plans" 
                         FontSize="32" 
                         FontWeight="Bold"
                         Foreground="{StaticResource TextPrimaryColor}"
                         Margin="0,0,0,8"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
                <TextBlock Text="Create and manage payment plans, installments, and automated reminders for buyers"
                         FontSize="16"
                         Foreground="{StaticResource TextSecondaryColor}"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
            </StackPanel>
            
            <!-- Payment Plan Creation Form -->
            <Border Grid.Row="1" 
                  Style="{StaticResource CardStyle}"
                  Margin="0,0,0,24">
                <StackPanel Margin="24">
                    <TextBlock Text="Payment Plan Details" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Buyer -->
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="Buyer" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbBuyer" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"
                                    DisplayMemberPath="Name"
                                    SelectedValuePath="BuyerId"/>
                        </StackPanel>
                        
                        <!-- Plot -->
                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <TextBlock Text="Plot" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbPlot" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"
                                    DisplayMemberPath="PlotNo"
                                    SelectedValuePath="PlotId"/>
                        </StackPanel>
                        
                        <!-- Plan Type -->
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,16,0,0">
                            <TextBlock Text="Plan Type" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbPlanType" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"
                                    SelectionChanged="CmbPlanType_SelectionChanged">
                                <ComboBoxItem Content="Monthly" IsSelected="True"/>
                                <ComboBoxItem Content="Quarterly"/>
                                <ComboBoxItem Content="Bi-annual"/>
                                <ComboBoxItem Content="Custom"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Total Amount -->
                        <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,16,0,0">
                            <TextBlock Text="Total Amount" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtTotalAmount" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"
                                   TextChanged="TxtTotalAmount_TextChanged"/>
                        </StackPanel>
                        
                        <!-- Down Payment -->
                        <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,16,0,0">
                            <TextBlock Text="Down Payment" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtDownPayment" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"
                                   TextChanged="TxtDownPayment_TextChanged"/>
                        </StackPanel>
                        
                        <!-- No. of Installments -->
                        <StackPanel Grid.Column="2" Grid.Row="2" Margin="0,16,0,0">
                            <TextBlock Text="No. of Installments" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtInstallments" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"
                                   TextChanged="TxtInstallments_TextChanged"/>
                        </StackPanel>
                        
                        <!-- Installment Amount -->
                        <StackPanel Grid.Column="0" Grid.Row="3" Margin="0,16,0,0">
                            <TextBlock Text="Installment Amount" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtInstallmentAmount" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"
                                   IsReadOnly="True"
                                   Background="#F5F5F5"/>
                        </StackPanel>
                        
                        <!-- Start Date -->
                        <StackPanel Grid.Column="2" Grid.Row="3" Margin="0,16,0,0">
                            <TextBlock Text="Start Date" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <DatePicker x:Name="dpStartDate" 
                                      Height="40"/>
                        </StackPanel>
                        
                        <!-- Status -->
                        <StackPanel Grid.Column="0" Grid.Row="4" Margin="0,16,0,0">
                            <TextBlock Text="Status" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbStatus" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40">
                                <ComboBoxItem Content="Active" IsSelected="True"/>
                                <ComboBoxItem Content="Completed"/>
                                <ComboBoxItem Content="Cancelled"/>
                                <ComboBoxItem Content="On Hold"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Auto Reminders Section -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="5" Margin="0,24,0,0">
                            <TextBlock Text="Auto Reminders" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,16"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Overdue Reminder -->
                                <StackPanel Grid.Column="0">
                                    <CheckBox x:Name="chkOverdueReminder" 
                                            Content="Overdue Reminder"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            IsChecked="True"
                                            Margin="0,0,0,8"/>
                                    <TextBlock Text="Send reminders for overdue installments" 
                                             FontSize="12"
                                             Foreground="{StaticResource TextSecondaryColor}"
                                             Margin="20,0,0,0"
                                             TextOptions.TextFormattingMode="Display"
                                             TextOptions.TextRenderingMode="ClearType"/>
                                </StackPanel>
                                
                                <!-- Upcoming Installment Reminder -->
                                <StackPanel Grid.Column="2">
                                    <CheckBox x:Name="chkUpcomingReminder" 
                                            Content="Upcoming Installment Reminder"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            IsChecked="True"
                                            Margin="0,0,0,8"/>
                                    <TextBlock Text="Send reminders before installment due date" 
                                             FontSize="12"
                                             Foreground="{StaticResource TextSecondaryColor}"
                                             Margin="20,0,0,0"
                                             TextOptions.TextFormattingMode="Display"
                                             TextOptions.TextRenderingMode="ClearType"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right" 
                              Margin="0,24,0,0">
                        <Button x:Name="btnSave" 
                              Content="Save Plan" 
                              Style="{StaticResource PrimaryButtonStyle}"
                              Width="150"
                              Height="40"
                              Margin="0,0,12,0"
                              Click="BtnSave_Click"/>
                        <Button x:Name="btnClear" 
                              Content="Clear" 
                              Style="{StaticResource SecondaryButtonStyle}"
                              Width="120"
                              Height="40"
                              Margin="0,0,12,0"
                              Click="BtnClear_Click"/>
                        <Button x:Name="btnDelete" 
                              Content="Delete" 
                              Style="{StaticResource SecondaryButtonStyle}"
                              Width="120"
                              Height="40"
                              Click="BtnDelete_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Search and Filter Section -->
            <Border Grid.Row="2" 
                  Style="{StaticResource CardStyle}"
                  Margin="0,0,0,24">
                <StackPanel Margin="24">
                    <TextBlock Text="Search &amp; Filter" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search -->
                        <TextBox x:Name="txtSearch" 
                               Grid.Column="0"
                               Height="40"
                               TextChanged="TxtSearch_TextChanged"
                               Tag="Search by buyer, plot, or plan ID...">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}"/>
                            </TextBox.Style>
                        </TextBox>
                        
                        <!-- Filter by Status -->
                        <ComboBox x:Name="cmbFilterStatus" 
                                Grid.Column="2"
                                Style="{StaticResource ModernComboBoxStyle}"
                                Height="40"
                                SelectionChanged="CmbFilterStatus_SelectionChanged">
                            <ComboBoxItem Content="All Status" IsSelected="True"/>
                            <ComboBoxItem Content="Active"/>
                            <ComboBoxItem Content="Completed"/>
                            <ComboBoxItem Content="Cancelled"/>
                            <ComboBoxItem Content="On Hold"/>
                        </ComboBox>
                        
                        <!-- Export Buttons -->
                        <StackPanel Grid.Column="4" 
                                  Orientation="Horizontal"
                                  Margin="16,0,0,0">
                            <Button x:Name="btnExportPDF" 
                                  Content="Export PDF" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="120"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnExportPDF_Click"/>
                            <Button x:Name="btnExportExcel" 
                                  Content="Export Excel" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="120"
                                  Height="40"
                                  Click="BtnExportExcel_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Payment Plans List -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                <StackPanel Margin="24">
                    <TextBlock Text="Payment Plans" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <DataGrid x:Name="dgPaymentPlans" 
                            Style="{StaticResource ModernDataGridStyle}"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            SelectionMode="Single"
                            HeadersVisibility="Column"
                            SelectionChanged="DgPaymentPlans_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Plan ID" Binding="{Binding PlanId}" Width="100"/>
                            <DataGridTextColumn Header="Buyer" Binding="{Binding BuyerName}" Width="*"/>
                            <DataGridTextColumn Header="Plot" Binding="{Binding PlotNo}" Width="100"/>
                            <DataGridTextColumn Header="Plan Type" Binding="{Binding PlanType}" Width="100"/>
                            <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat='{}{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="Down Payment" Binding="{Binding DownPayment, StringFormat='{}{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="Installments" Binding="{Binding InstallmentCount}" Width="100"/>
                            <DataGridTextColumn Header="Installment Amount" Binding="{Binding InstallmentAmount, StringFormat='{}{0:N2}'}" Width="130"/>
                            <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="110"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>