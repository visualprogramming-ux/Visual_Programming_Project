<Page x:Class="Project.Pages.QuickEntryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Quick Entry" 
      Background="{StaticResource BackgroundColor}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Page Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="âš¡ Quick Entry" 
                         FontSize="32" 
                         FontWeight="Bold"
                         Foreground="{StaticResource TextPrimaryColor}"
                         Margin="0,0,0,8"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
                <TextBlock Text="Quickly record debit and credit transactions for customers"
                         FontSize="16"
                         Foreground="{StaticResource TextSecondaryColor}"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
            </StackPanel>
            
            <!-- Transaction Entry Form -->
            <Border Grid.Row="1" 
                  Style="{StaticResource CardStyle}"
                  Margin="0,0,0,24">
                <StackPanel Margin="24">
                    <TextBlock Text="Transaction Details" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Customer Selection -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,16">
                            <TextBlock Text="Customer" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbCustomer" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"
                                    DisplayMemberPath="Name"
                                    SelectedValuePath="CustomerId"/>
                        </StackPanel>
                        
                        <!-- Transaction Type -->
                        <StackPanel Grid.Column="0" Grid.Row="1">
                            <TextBlock Text="Transaction Type" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbTransactionType" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"
                                    SelectionChanged="CmbTransactionType_SelectionChanged">
                                <ComboBoxItem Content="Debit" IsSelected="True"/>
                                <ComboBoxItem Content="Credit"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Amount -->
                        <StackPanel Grid.Column="2" Grid.Row="1">
                            <TextBlock Text="Amount" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtAmount" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- Date -->
                        <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,16,0,0">
                            <TextBlock Text="Transaction Date" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <DatePicker x:Name="dpTransactionDate" 
                                      Height="40"
                                      SelectedDateChanged="DpTransactionDate_SelectionChanged"/>
                        </StackPanel>
                        
                        <!-- Reference Number -->
                        <StackPanel Grid.Column="2" Grid.Row="2" Margin="0,16,0,0">
                            <TextBlock Text="Reference Number" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtReference" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- Description -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" Margin="0,16,0,0">
                            <TextBlock Text="Description" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtDescription" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="80"
                                   TextWrapping="Wrap"
                                   AcceptsReturn="True"
                                   VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right" 
                              Margin="0,24,0,0">
                        <Button x:Name="btnSave" 
                              Content="Save Transaction" 
                              Style="{StaticResource PrimaryButtonStyle}"
                              Width="150"
                              Height="40"
                              Margin="0,0,12,0"
                              Click="BtnSave_Click"/>
                        <Button x:Name="btnClear" 
                              Content="Clear" 
                              Style="{StaticResource SecondaryButtonStyle}"
                              Width="120"
                              Height="40"
                              Click="BtnClear_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Recent Transactions -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <StackPanel Margin="24">
                    <TextBlock Text="Recent Transactions" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <DataGrid x:Name="dgTransactions" 
                            Style="{StaticResource ModernDataGridStyle}"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            SelectionMode="Single"
                            HeadersVisibility="Column"
                            SelectionChanged="DgTransactions_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="120"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType}" Width="100"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='{}{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="Reference" Binding="{Binding Reference}" Width="150"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
