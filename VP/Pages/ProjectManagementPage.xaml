<Page x:Class="Project.Pages.ProjectManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Project Management" 
      Background="{StaticResource BackgroundColor}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Page Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="ðŸ“‹ Project Management" 
                         FontSize="32" 
                         FontWeight="Bold"
                         Foreground="{StaticResource TextPrimaryColor}"
                         Margin="0,0,0,8"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
                <TextBlock Text="Manage project details and information"
                         FontSize="16"
                         Foreground="{StaticResource TextSecondaryColor}"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
            </StackPanel>
            
            <!-- Input Form -->
            <Border Grid.Row="1" 
                  Style="{StaticResource CardStyle}"
                  Margin="0,0,0,24">
                <StackPanel Margin="24">
                    <TextBlock Text="Add/Edit Project" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Project ID -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Project ID" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtProjectId"
                                   IsReadOnly="True"
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- Project Name -->
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="Project Name" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtProjectName" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- Location -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,16,0,0">
                            <TextBlock Text="Location" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtLocation" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- Status -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,16,0,0">
                            <TextBlock Text="Status" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbStatus" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"/>
                        </StackPanel>
                        
                        <!-- Buttons -->
                        <StackPanel Grid.Row="3" 
                                  Grid.Column="0" 
                                  Grid.ColumnSpan="3"
                                  Orientation="Horizontal"
                                  HorizontalAlignment="Right"
                                  Margin="0,24,0,0">
                            <Button Content="Save" 
                                  Style="{StaticResource PrimaryButtonStyle}"
                                  Width="120"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnSave_Click"/>
                            <Button Content="Clear" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="120"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnClear_Click"/>
                            <Button Content="Delete" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="120"
                                  Height="40"
                                  Click="BtnDelete_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Data Grid -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <StackPanel Margin="24">
                    <TextBlock Text="Projects List" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <DataGrid x:Name="dgProjects" 
                            Style="{StaticResource ModernDataGridStyle}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            SelectionMode="Single"
                            SelectionChanged="DgProjects_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Project ID" Binding="{Binding ProjectId}" Width="120"/>
                            <DataGridTextColumn Header="Project Name" Binding="{Binding ProjectName}" Width="*"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="200"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>



