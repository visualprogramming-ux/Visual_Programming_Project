<Page x:Class="Project.Pages.PlotManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Plot Management" 
      Background="{StaticResource BackgroundColor}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Page Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="Project-Wise Plot Management (Marla-Based)" 
                         FontSize="32" 
                         FontWeight="Bold"
                         Foreground="{StaticResource TextPrimaryColor}"
                         Margin="0,0,0,8"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
                <TextBlock Text="Manage plots by project with Marla-based measurements, plot specifications, pricing, and availability status"
                         FontSize="16"
                         Foreground="{StaticResource TextSecondaryColor}"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
            </StackPanel>
            
            <!-- Input Form -->
            <Border Grid.Row="1" 
                  Style="{StaticResource CardStyle}"
                  Margin="0,0,0,24">
                <StackPanel Margin="24">
                    <TextBlock Text="Add/Edit Plot" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Plot Number -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Plot Number" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtPlotNo" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- Project -->
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="Project" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbProject" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"/>
                        </StackPanel>
                        
                        <!-- Size -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,16,0,0">
                            <TextBlock Text="Size (marla)" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtSize" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- Price -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,16,0,0">
                            <TextBlock Text="Price" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <TextBox x:Name="txtPrice" 
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="40"/>
                        </StackPanel>
                        
                        <!-- Status -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,16,0,0">
                            <TextBlock Text="Status" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbStatus" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"/>
                        </StackPanel>
                        
                        <!-- Current Owner -->
                        <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,16,0,0">
                            <TextBlock Text="Current Owner" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="cmbOwner" 
                                        Grid.Column="0"
                                        Style="{StaticResource ModernComboBoxStyle}"
                                        Height="40"
                                        Margin="0,0,8,0"/>
                                <Button x:Name="btnAddOwner"
                                        Grid.Column="1"
                                        Content="+ New"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Width="80"
                                        Height="40"
                                        Click="BtnAddOwner_Click"
                                        ToolTip="Add New Owner"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Buttons -->
                        <StackPanel Grid.Row="3" 
                                  Grid.Column="0" 
                                  Grid.ColumnSpan="3"
                                  Orientation="Horizontal"
                                  HorizontalAlignment="Right"
                                  Margin="0,24,0,0">
                            <Button Content="Save" 
                                  Style="{StaticResource PrimaryButtonStyle}"
                                  Width="120"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnSave_Click"/>
                            <Button Content="Clear" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="120"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnClear_Click"/>
                            <Button Content="Delete" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="120"
                                  Height="40"
                                  Click="BtnDelete_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Data Grid -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <StackPanel Margin="24">
                    <TextBlock Text="Plots List" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <DataGrid x:Name="dgPlots" 
                            Style="{StaticResource ModernDataGridStyle}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            SelectionMode="Single"
                            SelectionChanged="DgPlots_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Plot No" Binding="{Binding PlotNo}" Width="120"/>
                            <DataGridTextColumn Header="Project" Binding="{Binding ProjectName}" Width="*"/>
                            <DataGridTextColumn Header="Size (marla)" Binding="{Binding Size, StringFormat='{}{0} marla'}" Width="120"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='{}{0:N2}'}" Width="150"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            <DataGridTextColumn Header="Owner" Binding="{Binding OwnerName}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>



