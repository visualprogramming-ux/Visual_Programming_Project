<Page x:Class="Project.Pages.ReceivablesAgingReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Receivables Aging Report" 
      Background="{StaticResource BackgroundColor}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Page Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="ðŸ“… Receivables Aging Report" 
                         FontSize="32" 
                         FontWeight="Bold"
                         Foreground="{StaticResource TextPrimaryColor}"
                         Margin="0,0,0,8"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
                <TextBlock Text="View aging breakdown of outstanding receivables by customer"
                         FontSize="16"
                         Foreground="{StaticResource TextSecondaryColor}"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
            </StackPanel>
            
            <!-- Filter Section -->
            <Border Grid.Row="1" 
                  Style="{StaticResource CardStyle}"
                  Margin="0,0,0,24">
                <StackPanel Margin="24">
                    <TextBlock Text="Report Filters" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- As of Date -->
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="As of Date" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <DatePicker x:Name="dpAsOfDate" 
                                      Height="40"
                                      SelectedDateChanged="DpAsOfDate_SelectionChanged"/>
                        </StackPanel>
                        
                        <!-- Customer Filter -->
                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <TextBlock Text="Customer (Optional)" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbCustomer" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"
                                    DisplayMemberPath="Name"
                                    SelectedValuePath="CustomerId">
                                <ComboBoxItem Content="All Customers" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" 
                                  Orientation="Horizontal" 
                                  HorizontalAlignment="Right" 
                                  Margin="0,20,0,0">
                            <Button x:Name="btnGenerate" 
                                  Content="Generate Report" 
                                  Style="{StaticResource PrimaryButtonStyle}"
                                  Width="150"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnGenerate_Click"/>
                            <Button x:Name="btnExportExcel" 
                                  Content="Export to Excel" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="140"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnExportExcel_Click"/>
                            <Button x:Name="btnExportPDF" 
                                  Content="Export to PDF" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="140"
                                  Height="40"
                                  Click="BtnExportPDF_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Aging Summary Cards -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <StackPanel Margin="24">
                    <TextBlock Text="Aging Summary" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <!-- Summary Cards Row -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                        <Border Background="#E3F2FD" 
                              CornerRadius="8" 
                              Padding="20" 
                              Margin="0,0,16,0"
                              MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="Current (0-30 days)" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextSecondaryColor}"
                                         Margin="0,0,0,4"
                                         TextOptions.TextFormattingMode="Display"
                                         TextOptions.TextRenderingMode="ClearType"/>
                                <TextBlock x:Name="txtCurrent" 
                                         Text="0.00" 
                                         FontSize="24" 
                                         FontWeight="Bold"
                                         Foreground="{StaticResource PrimaryColor}"
                                         TextOptions.TextFormattingMode="Display"
                                         TextOptions.TextRenderingMode="ClearType"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#FFF3E0" 
                              CornerRadius="8" 
                              Padding="20" 
                              Margin="0,0,16,0"
                              MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="31-60 Days" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextSecondaryColor}"
                                         Margin="0,0,0,4"
                                         TextOptions.TextFormattingMode="Display"
                                         TextOptions.TextRenderingMode="ClearType"/>
                                <TextBlock x:Name="txtDays31to60" 
                                         Text="0.00" 
                                         FontSize="24" 
                                         FontWeight="Bold"
                                         Foreground="#FF9800"
                                         TextOptions.TextFormattingMode="Display"
                                         TextOptions.TextRenderingMode="ClearType"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#FFEBEE" 
                              CornerRadius="8" 
                              Padding="20" 
                              Margin="0,0,16,0"
                              MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="61-90 Days" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextSecondaryColor}"
                                         Margin="0,0,0,4"
                                         TextOptions.TextFormattingMode="Display"
                                         TextOptions.TextRenderingMode="ClearType"/>
                                <TextBlock x:Name="txtDays61to90" 
                                         Text="0.00" 
                                         FontSize="24" 
                                         FontWeight="Bold"
                                         Foreground="#F44336"
                                         TextOptions.TextFormattingMode="Display"
                                         TextOptions.TextRenderingMode="ClearType"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#F3E5F5" 
                              CornerRadius="8" 
                              Padding="20" 
                              Margin="0,0,0,0"
                              MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="Over 90 Days" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextSecondaryColor}"
                                         Margin="0,0,0,4"
                                         TextOptions.TextFormattingMode="Display"
                                         TextOptions.TextRenderingMode="ClearType"/>
                                <TextBlock x:Name="txtOver90" 
                                         Text="0.00" 
                                         FontSize="24" 
                                         FontWeight="Bold"
                                         Foreground="#9C27B0"
                                         TextOptions.TextFormattingMode="Display"
                                         TextOptions.TextRenderingMode="ClearType"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Aging Report DataGrid -->
                    <DataGrid x:Name="dgAgingReport" 
                            Style="{StaticResource ModernDataGridStyle}"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            SelectionMode="Single"
                            HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                            <DataGridTextColumn Header="Total Outstanding" Binding="{Binding TotalOutstanding, StringFormat='{}{0:N2}'}" Width="140"/>
                            <DataGridTextColumn Header="Current (0-30)" Binding="{Binding Current, StringFormat='{}{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="31-60 Days" Binding="{Binding Days31to60, StringFormat='{}{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="61-90 Days" Binding="{Binding Days61to90, StringFormat='{}{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="Over 90 Days" Binding="{Binding Over90, StringFormat='{}{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="Oldest Invoice Date" Binding="{Binding OldestInvoiceDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
