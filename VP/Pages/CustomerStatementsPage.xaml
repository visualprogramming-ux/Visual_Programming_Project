<Page x:Class="Project.Pages.CustomerStatementsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Customer Statements" 
      Background="{StaticResource BackgroundColor}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Page Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="ðŸ“„ Customer Statements" 
                         FontSize="32" 
                         FontWeight="Bold"
                         Foreground="{StaticResource TextPrimaryColor}"
                         Margin="0,0,0,8"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
                <TextBlock Text="Generate and view customer account statements with transaction history"
                         FontSize="16"
                         Foreground="{StaticResource TextSecondaryColor}"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType"/>
            </StackPanel>
            
            <!-- Statement Parameters -->
            <Border Grid.Row="1" 
                  Style="{StaticResource CardStyle}"
                  Margin="0,0,0,24">
                <StackPanel Margin="24">
                    <TextBlock Text="Statement Parameters" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryColor}"
                             Margin="0,0,0,20"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Customer Selection -->
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="Customer" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbCustomer" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"
                                    DisplayMemberPath="Name"
                                    SelectedValuePath="CustomerId"
                                    SelectionChanged="CmbCustomer_SelectionChanged"/>
                        </StackPanel>
                        
                        <!-- Statement Period -->
                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <TextBlock Text="Statement Period" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <ComboBox x:Name="cmbPeriod" 
                                    Style="{StaticResource ModernComboBoxStyle}"
                                    Height="40"
                                    SelectionChanged="CmbPeriod_SelectionChanged">
                                <ComboBoxItem Content="Last 30 Days" IsSelected="True"/>
                                <ComboBoxItem Content="Last 60 Days"/>
                                <ComboBoxItem Content="Last 90 Days"/>
                                <ComboBoxItem Content="Custom Range"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Date Range (shown when Custom Range is selected) -->
                        <StackPanel Grid.Column="0" Grid.Row="1" 
                                  x:Name="pnlDateRange" 
                                  Visibility="Collapsed"
                                  Margin="0,16,0,0">
                            <TextBlock Text="From Date" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <DatePicker x:Name="dpFromDate" 
                                      Height="40"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Grid.Row="1" 
                                  x:Name="pnlToDate" 
                                  Visibility="Collapsed"
                                  Margin="0,16,0,0">
                            <TextBlock Text="To Date" 
                                     FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     Margin="0,0,0,8"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            <DatePicker x:Name="dpToDate" 
                                      Height="40"/>
                        </StackPanel>
                        
                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" 
                                  Orientation="Horizontal" 
                                  HorizontalAlignment="Right" 
                                  Margin="0,24,0,0">
                            <Button x:Name="btnGenerate" 
                                  Content="Generate Statement" 
                                  Style="{StaticResource PrimaryButtonStyle}"
                                  Width="160"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnGenerate_Click"/>
                            <Button x:Name="btnExportPDF" 
                                  Content="Export to PDF" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="140"
                                  Height="40"
                                  Margin="0,0,12,0"
                                  Click="BtnExportPDF_Click"
                                  IsEnabled="False"/>
                            <Button x:Name="btnEmail" 
                                  Content="Email Statement" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="150"
                                  Height="40"
                                  Click="BtnEmail_Click"
                                  IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Statement Preview -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <!-- Statement Header -->
                        <StackPanel x:Name="pnlStatementHeader" Margin="0,0,0,24">
                            <TextBlock Text="ACCOUNT STATEMENT" 
                                     FontSize="24" 
                                     FontWeight="Bold"
                                     Foreground="{StaticResource TextPrimaryColor}"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,16"
                                     TextOptions.TextFormattingMode="Display"
                                     TextOptions.TextRenderingMode="ClearType"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="txtCustomerName" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimaryColor}"
                                             Margin="0,0,0,8"
                                             TextOptions.TextFormattingMode="Display"
                                             TextOptions.TextRenderingMode="ClearType"/>
                                    <TextBlock x:Name="txtCustomerAddress" 
                                             FontSize="14"
                                             Foreground="{StaticResource TextSecondaryColor}"
                                             TextOptions.TextFormattingMode="Display"
                                             TextOptions.TextRenderingMode="ClearType"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                    <TextBlock Text="Statement Period:" 
                                             FontSize="14"
                                             Foreground="{StaticResource TextSecondaryColor}"
                                             Margin="0,0,0,4"
                                             TextOptions.TextFormattingMode="Display"
                                             TextOptions.TextRenderingMode="ClearType"/>
                                    <TextBlock x:Name="txtStatementPeriod" 
                                             FontSize="14" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimaryColor}"
                                             TextOptions.TextFormattingMode="Display"
                                             TextOptions.TextRenderingMode="ClearType"/>
                                </StackPanel>
                            </Grid>
                            
                            <Border Background="#F5F5F5" 
                                  CornerRadius="4" 
                                  Padding="12" 
                                  Margin="0,16,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Opening Balance" 
                                                 FontSize="12"
                                                 Foreground="{StaticResource TextSecondaryColor}"
                                                 Margin="0,0,0,4"
                                                 TextOptions.TextFormattingMode="Display"
                                                 TextOptions.TextRenderingMode="ClearType"/>
                                        <TextBlock x:Name="txtOpeningBalance" 
                                                 Text="0.00" 
                                                 FontSize="16" 
                                                 FontWeight="SemiBold"
                                                 Foreground="{StaticResource TextPrimaryColor}"
                                                 TextOptions.TextFormattingMode="Display"
                                                 TextOptions.TextRenderingMode="ClearType"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Closing Balance" 
                                                 FontSize="12"
                                                 Foreground="{StaticResource TextSecondaryColor}"
                                                 Margin="0,0,0,4"
                                                 TextOptions.TextFormattingMode="Display"
                                                 TextOptions.TextRenderingMode="ClearType"/>
                                        <TextBlock x:Name="txtClosingBalance" 
                                                 Text="0.00" 
                                                 FontSize="16" 
                                                 FontWeight="SemiBold"
                                                 Foreground="{StaticResource TextPrimaryColor}"
                                                 TextOptions.TextFormattingMode="Display"
                                                 TextOptions.TextRenderingMode="ClearType"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Outstanding" 
                                                 FontSize="12"
                                                 Foreground="{StaticResource TextSecondaryColor}"
                                                 Margin="0,0,0,4"
                                                 TextOptions.TextFormattingMode="Display"
                                                 TextOptions.TextRenderingMode="ClearType"/>
                                        <TextBlock x:Name="txtOutstanding" 
                                                 Text="0.00" 
                                                 FontSize="16" 
                                                 FontWeight="SemiBold"
                                                 Foreground="#F44336"
                                                 TextOptions.TextFormattingMode="Display"
                                                 TextOptions.TextRenderingMode="ClearType"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                        
                        <!-- Statement Transactions -->
                        <DataGrid x:Name="dgStatement" 
                                Style="{StaticResource ModernDataGridStyle}"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                SelectionMode="Single"
                                HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="120"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                <DataGridTextColumn Header="Reference" Binding="{Binding Reference}" Width="150"/>
                                <DataGridTextColumn Header="Debit" Binding="{Binding Debit, StringFormat='{}{0:N2}'}" Width="120"/>
                                <DataGridTextColumn Header="Credit" Binding="{Binding Credit, StringFormat='{}{0:N2}'}" Width="120"/>
                                <DataGridTextColumn Header="Balance" Binding="{Binding Balance, StringFormat='{}{0:N2}'}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
