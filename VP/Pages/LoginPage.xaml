<Page x:Class="Project.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Login" 
      Background="{StaticResource BackgroundColor}">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F5F7FA" Offset="0"/>
                <GradientStop Color="#E8F0FE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- Main Content -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side - Image/Icon -->
            <Border Grid.Column="0" 
                    Width="300" 
                    Background="{StaticResource PrimaryGradientBrush}"
                    CornerRadius="12,0,0,12">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" Direction="315" 
                                    ShadowDepth="8" Opacity="0.3" BlurRadius="20"/>
                </Border.Effect>
                <StackPanel VerticalAlignment="Center" 
                          HorizontalAlignment="Center"
                          Margin="40">
                    <TextBlock Text="ðŸ¢" 
                             FontSize="80" 
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>
                    <TextBlock Text="Real Estate" 
                             FontSize="32" 
                             FontWeight="Bold"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,8"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    <TextBlock Text="Management System" 
                             FontSize="18" 
                             FontWeight="SemiBold"
                             Foreground="White"
                             Opacity="0.9"
                             HorizontalAlignment="Center"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                </StackPanel>
            </Border>
            
            <!-- Right Side - Login Form -->
            <Border Grid.Column="1" 
                    Background="{StaticResource SurfaceColor}"
                    CornerRadius="0,12,12,0"
                    Padding="50,60"
                    MinHeight="500">
                <Border.Effect>
                    <DropShadowEffect Color="#30000000" Direction="315" 
                                    ShadowDepth="8" Opacity="0.2" BlurRadius="20"/>
                </Border.Effect>
                <StackPanel TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType">
                    <!-- Title -->
                    <TextBlock Text="Sign in to continue" 
                             FontSize="32" 
                             FontWeight="Bold"
                             Foreground="#1A1A1A"
                             Margin="0,0,0,40"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <!-- Email Field -->
                    <TextBlock Text="Email" 
                             FontSize="14" 
                             FontWeight="SemiBold"
                             Foreground="#1F2937"
                             Margin="0,0,0,8"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    <TextBox x:Name="txtUsername" 
                           FontSize="15" 
                           Padding="16,12"
                           Margin="0,0,0,24"
                           BorderThickness="1"
                           BorderBrush="{StaticResource DividerColor}"
                           Background="{StaticResource BackgroundColor}"
                           Foreground="#1A1A1A"
                           VerticalContentAlignment="Center"
                           TextOptions.TextFormattingMode="Display"
                           TextOptions.TextRenderingMode="ClearType">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border x:Name="border" 
                                                  Background="{TemplateBinding Background}"
                                                  BorderBrush="{TemplateBinding BorderBrush}"
                                                  BorderThickness="{TemplateBinding BorderThickness}"
                                                  CornerRadius="8">
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                            Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" 
                                                          Property="BorderBrush" 
                                                          Value="{StaticResource PrimaryColor}"/>
                                                    <Setter TargetName="border" 
                                                          Property="BorderThickness" 
                                                          Value="2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <!-- Password Field -->
                    <TextBlock Text="Password" 
                             FontSize="14" 
                             FontWeight="SemiBold"
                             Foreground="#1F2937"
                             Margin="0,0,0,8"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    <PasswordBox x:Name="txtPassword" 
                               FontSize="15" 
                               Padding="16,12"
                               Margin="0,0,0,16"
                               BorderThickness="1"
                               BorderBrush="{StaticResource DividerColor}"
                               Background="{StaticResource BackgroundColor}"
                               VerticalContentAlignment="Center"
                               TextOptions.TextFormattingMode="Display"
                               TextOptions.TextRenderingMode="ClearType">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border x:Name="border" 
                                                  Background="{TemplateBinding Background}"
                                                  BorderBrush="{TemplateBinding BorderBrush}"
                                                  BorderThickness="{TemplateBinding BorderThickness}"
                                                  CornerRadius="8">
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                            Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" 
                                                          Property="BorderBrush" 
                                                          Value="{StaticResource PrimaryColor}"/>
                                                    <Setter TargetName="border" 
                                                          Property="BorderThickness" 
                                                          Value="2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                    
                    <!-- Forget Password Link -->
                    <Button x:Name="btnForgotPassword" 
                          Content="Forgot Password?" 
                          FontSize="14"
                          FontWeight="Medium"
                          Foreground="{StaticResource PrimaryColor}"
                          Background="Transparent"
                          BorderThickness="0"
                          HorizontalAlignment="Right"
                          Padding="0,0,0,0"
                          Margin="0,0,0,32"
                          Cursor="Hand"
                          Click="BtnForgotPassword_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <TextBlock Text="{TemplateBinding Content}"
                                                     Foreground="{TemplateBinding Foreground}"
                                                     FontSize="{TemplateBinding FontSize}"
                                                     FontWeight="Medium"
                                                     TextOptions.TextFormattingMode="Display"
                                                     TextOptions.TextRenderingMode="ClearType">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="TextDecorations" Value="Underline"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Error Message -->
                    <TextBlock x:Name="txtErrorMessage" 
                             Text="" 
                             FontSize="14" 
                             FontWeight="Medium"
                             Foreground="{StaticResource ErrorColor}"
                             Margin="0,0,0,16"
                             TextWrapping="Wrap"
                             Visibility="Collapsed"
                             HorizontalAlignment="Center"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                    
                    <!-- Login Button -->
                    <Button x:Name="btnLogin" 
                          Content="Login" 
                          Style="{StaticResource PrimaryButtonStyle}"
                          FontSize="16"
                          Padding="0,14"
                          Margin="0,0,0,16"
                          Click="BtnLogin_Click"
                          Cursor="Hand"
                          TextOptions.TextFormattingMode="Display"
                          TextOptions.TextRenderingMode="ClearType"/>
                    
                    <!-- Create Account Link -->
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20">
                        <TextBlock Text="Don't have an account? " 
                                 FontSize="14"
                                 Foreground="{StaticResource TextSecondaryColor}"
                                 VerticalAlignment="Center"
                                 TextOptions.TextFormattingMode="Display"
                                 TextOptions.TextRenderingMode="ClearType"/>
                        <Button x:Name="btnCreateAccount"
                              Content="Create Account"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource PrimaryColor}"
                              Background="Transparent"
                              BorderThickness="0"
                              Padding="0"
                              Cursor="Hand"
                              Click="BtnCreateAccount_Click"
                              VerticalAlignment="Center"
                              TextOptions.TextFormattingMode="Display"
                              TextOptions.TextRenderingMode="ClearType">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <TextBlock Text="{TemplateBinding Content}"
                                                         Foreground="{TemplateBinding Foreground}"
                                                         FontSize="{TemplateBinding FontSize}"
                                                         FontWeight="{TemplateBinding FontWeight}"
                                                         TextOptions.TextFormattingMode="Display"
                                                         TextOptions.TextRenderingMode="ClearType">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="TextDecorations" Value="Underline"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                    
                    <!-- Footer -->
                    <TextBlock Text="Â© 2026 Real Estate Management System. All rights reserved." 
                             FontSize="11" 
                             Foreground="{StaticResource TextSecondaryColor}"
                             HorizontalAlignment="Center"
                             Opacity="0.7"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

