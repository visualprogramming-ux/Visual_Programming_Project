<Page x:Class="Project.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Welcome" 
      Background="{StaticResource BackgroundColor}">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2196F3" Offset="0"/>
                <GradientStop Color="#1E88E5" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ðŸ¢" 
                     FontSize="100" 
                     HorizontalAlignment="Center"
                     Margin="0,0,0,30"/>
            <TextBlock Text="REAL ESTATE" 
                     FontSize="48" 
                     FontWeight="Bold"
                     Foreground="White"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,10"
                     TextOptions.TextFormattingMode="Display"
                     TextOptions.TextRenderingMode="ClearType"/>
            <TextBlock Text="MANAGEMENT SYSTEM" 
                     FontSize="32" 
                     FontWeight="SemiBold"
                     Foreground="White"
                     Opacity="0.9"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,40"
                     TextOptions.TextFormattingMode="Display"
                     TextOptions.TextRenderingMode="ClearType"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Ellipse Width="12" Height="12" Fill="White" Opacity="0.8" Margin="5">
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                   From="0.3" To="1.0" 
                                                   Duration="0:0:0.8" 
                                                   RepeatBehavior="Forever" 
                                                   AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                <Ellipse Width="12" Height="12" Fill="White" Opacity="0.8" Margin="5">
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                   From="0.3" To="1.0" 
                                                   Duration="0:0:0.8" 
                                                   BeginTime="0:0:0.2"
                                                   RepeatBehavior="Forever" 
                                                   AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                <Ellipse Width="12" Height="12" Fill="White" Opacity="0.8" Margin="5">
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                   From="0.3" To="1.0" 
                                                   Duration="0:0:0.8" 
                                                   BeginTime="0:0:0.4"
                                                   RepeatBehavior="Forever" 
                                                   AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

